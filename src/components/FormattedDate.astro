---
interface Props {
  date: Date;
  class?: string;
}

const { date, class: className } = Astro.props;
---

<time datetime={date.toISOString()} {...(className && { class: className })}>
  {date.toLocaleDateString('en-us', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
  })}
</time>
